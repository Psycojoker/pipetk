from re import sub
from pipetk import PipeTemplate

class TweetLen(PipeTemplate):
    def process(self, line):
        yield str(len(sub("https?://[^ ]+", "http://t.co/........", line.decode("Utf-8"))))

if __name__ == "__main__":
    TweetLen().run()

